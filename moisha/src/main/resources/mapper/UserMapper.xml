<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.moisha.repository.UserRepository">
  <select id="selectUserByUserId" resultType="user">
  SELECT
    *
  FROM
    user
  WHERE
    user_id = #{userId}
</select>
</mapper>
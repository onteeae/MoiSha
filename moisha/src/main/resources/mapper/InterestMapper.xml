<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.moisha.repository.InterestRepository">
  <select id="selectInterestsAll" resultType="interest">
    SELECT
      *
    FROM
      interest
  </select>

  <select id="selectInterestsByUserId" resultType="interest">
    SELECT
      *
    FROM
      interest
    WHERE
      interest_no in
      (
        SELECT
          interest_no
        FROM
          interest_user
        WHERE
          user_id = #{userId}
      )
  </select>
</mapper>